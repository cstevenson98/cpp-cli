{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "source .venv/bin/activate && conan install . --build=missing -s build_type=Debug && conan build . -s build_type=Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "source .venv/bin/activate && conan install . --build=missing -s build_type=Release && conan build . -s build_type=Release",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "test-debug",
            "type": "shell",
            "command": "cd build/Debug && ctest --output-on-failure",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "build-debug"
            ],
            "problemMatcher": []
        },
        {
            "label": "test-release",
            "type": "shell",
            "command": "cd build/Release && ctest --output-on-failure",
            "group": "test",
            "dependsOn": [
                "build-release"
            ],
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf build",
            "problemMatcher": []
        },
        {
            "label": "clang-tidy: Lint All Sources",
            "type": "shell",
            "command": "find src -name '*.cpp' -o -name '*.hpp' -o -name '*.h' -o -name '*.cc' | xargs clang-tidy -p . --",
            "problemMatcher": {
                "owner": "clang-tidy",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+):\\s+(warning|error|note):\\s+(.+)\\s+\\[(.+)\\]$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5,
                    "code": 6
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "clang-tidy: Lint Current File",
            "type": "shell",
            "command": "clang-tidy",
            "args": [
                "${file}",
                "-p",
                "."
            ],
            "problemMatcher": {
                "owner": "clang-tidy",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+):\\s+(warning|error|note):\\s+(.+)\\s+\\[(.+)\\]$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5,
                    "code": 6
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}